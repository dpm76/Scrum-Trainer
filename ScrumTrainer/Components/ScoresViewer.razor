@namespace ScrumTrainer.Components

<div class="scores-container">
    @if (QuizResults.Count > 0)
    {
        <table class="table responsive-table">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Time</th>
                    <th>Right Rate</th>
                    <th>Seconds Taken</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var result in QuizResults)
                {
                    <tr>
                        <td data-label="Date">@result.TimeStamp.ToShortDateString()</td>
                        <td data-label="Time">@result.TimeStamp.ToShortTimeString()</td>
                        <td data-label="Right Rate">@result.RightQuestionsCount / @result.TotalQuestionsCount (@result.RightAnswerRate.ToString("P2"))</td>
                        <td data-label="Seconds Taken">@result.SecondsTaken s / @result.MaxSeconds s</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>You don't have any result yet. Please, do a <a href="/quiz">quiz</a> first.</p>
    }
</div>
